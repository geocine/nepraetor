<Window x:Class="Nepraetor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nepraetor"
        mc:Ignorable="d"
        Title="Screen Region Capture" Height="100" Width="300"
        WindowStyle="ToolWindow"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Press Alt + S to capture a screen region" HorizontalAlignment="Center"/>
        <TextBlock Text="Click and drag captured regions to move them" HorizontalAlignment="Center" Margin="0,5,0,0"/>
    </StackPanel>
</Window>
